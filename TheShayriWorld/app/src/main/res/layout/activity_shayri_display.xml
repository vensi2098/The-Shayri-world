<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/display_bg"
    android:orientation="vertical"
    tools:context=".allactivity.ShayriDisplayActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="#010B1B">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgBackArrowShayri"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:src="@drawable/back_aerrow" />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imfShow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/txtShayri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/amarante"
                        android:gravity="center"

                        android:textColor="#010B1B"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <ImageView

                        android:id="@+id/imgAdd"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="@dimen/_22sdp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="7dp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/add" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#010B1B"
                android:gravity="center"
                android:padding="@dimen/_7sdp">

                <ImageView
                    android:id="@+id/imggLikee"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:background="@drawable/iteam_category_bg"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/llike" />

                <ImageView
                    android:id="@+id/imgShareShayri"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:background="@drawable/iteam_category_bg"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/share" />

                <ImageView
                    android:id="@+id/imgCopy"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:background="@drawable/iteam_category_bg"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/copy" />

                <ImageView
                    android:id="@+id/imgDownload"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginHorizontal="@dimen/_22sdp"
                    android:background="@drawable/iteam_category_bg"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/download_img" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout><!--</LinearLayout>-->